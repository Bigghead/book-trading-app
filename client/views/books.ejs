<% include partials/header %>

<% if(currentUser){  %>
  <div class="container">
    <div class="row center-align">
      <div class="col l6">
        <a class="waves-effect waves-light btn blue" href="/user/tradeRequest">Trade Requests: <%= currentUser.peopleWantingToTrade.length %></a>
      </div>
      <div class="col l6">
        <a class="waves-effect waves-light btn green" href="#a">Pending Trades: <%= currentUser.userTrade.length %></a>
      </div>
    </div>
  </div>
<%  }  %>

<div class="container">
  <div class='row'>
    <% books.forEach(function(book){ %>
      <div class="col  l4 m6 s12 center-align books-container">
      <h5 class='limit'><%= book.bookName %></h5>
      <img src=<%= book.picture %> class='book-image'>

      <% if(currentUser && book.ownedBy.toString() !== currentUser._id){ %>
        <div>
          <a class="waves-effect waves-light btn" href="/books/<%= book._id %>">Request A Trade</a>
        </div>



        <%  }  %>
          </div>
        <%  })  %>
      </div>
    </div>





    <% include partials/footer %>
